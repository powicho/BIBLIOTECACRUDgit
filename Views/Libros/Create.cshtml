@model Inventario.Models.Libro

@{
    ViewData["Title"] = "Crear Libro";
}

<div>
    <a asp-action="Index" class="bi bi-chevron-left text-dark fs-4"></a>
    <span class="fs-4 fw-bold">Crear Libro</span>
</div>
<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" placeholder="Introduzca el nombre del libro" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" placeholder="Introduzca el nombres del autor" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" placeholder="Introduzca el precio del libro" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <button type="submit" class="btn btn-success"><i class="bi bi-plus"></i> Crear</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}